---
/**
 * BibliaGo v2.2 - Edición Local (Sin API)
 * Cambio de fuente de datos de API de Gemini a JSON local.
 */
import { BookOpen, Sparkles, ChevronRight, RotateCcw, CheckCircle2, MoreHorizontal, AlertTriangle } from 'lucide-astro';
---

<div class="w-full max-w-[440px] flex flex-col min-h-[85vh] opacity-0 transition-all duration-1000" id="app-container">
  
  <header class="flex items-center justify-between mb-10 px-2">
    <div class="flex items-center space-x-4">
      <div class="w-14 h-14 bg-indigo-600 rounded-2xl shadow-xl shadow-indigo-100 flex items-center justify-center text-white ring-4 ring-white">
        <BookOpen size={32} strokeWidth={2.5} />
      </div>
      <div>
        <h1 class="text-2xl font-black text-slate-900 leading-tight tracking-tight">BibliaGo</h1>
        <div class="flex items-center space-x-2">
          <span class="w-2 h-2 bg-indigo-500 rounded-full animate-pulse"></span>
          <p class="text-[10px] font-bold text-slate-400 uppercase tracking-[0.2em]">Base de Datos Local</p>
        </div>
      </div>
    </div>
  </header>

  <nav class="flex p-1.5 bg-white/80 backdrop-blur-2xl rounded-2xl shadow-sm border border-slate-200/60 mb-8 overflow-x-auto no-scrollbar">
    {['Aleatorio', 'Básico', 'Medio', 'Alto'].map((lvl) => (
      <button 
        data-level={lvl} 
        class={`level-btn cursor-pointer grow flex items-center justify-center py-3 px-4 rounded-xl text-xs font-bold transition-all duration-300 ${lvl === 'Aleatorio' ? 'active-btn bg-indigo-600 text-white shadow-lg shadow-indigo-100' : 'text-slate-400 hover:text-indigo-600 hover:bg-indigo-50'}`}
      >
        <span>{lvl === 'Aleatorio' ? 'Todos' : lvl}</span>
      </button>
    ))}
  </nav>

  <div class="grow flex flex-col">
    <div class="bg-white rounded-[3rem] shadow-[0_20px_50px_rgba(0,0,0,0.05)] p-10 border border-slate-100 grow flex flex-col relative overflow-hidden" id="main-card">
      
      <div id="state-initial" class="grow flex flex-col items-center justify-center text-center space-y-8 animate-fade-in">
        <div class="w-24 h-24 bg-gradient-to-tr from-indigo-500 to-indigo-700 rounded-full flex items-center justify-center shadow-2xl shadow-indigo-100 animate-bounce-soft">
          <Sparkles size={40} class="text-white" />
        </div>
        <div class="space-y-3">
          <h3 class="text-2xl font-extrabold text-slate-800">Trivia Diaria</h3>
          <p class="text-sm text-slate-400 font-medium px-6 leading-relaxed">Estudia las Escrituras con preguntas inteligentes.</p>
        </div>
      </div>

      <div id="state-loading" class="hidden grow flex flex-col items-center justify-center space-y-6">
        <div class="w-12 h-12 border-4 border-slate-100 border-t-indigo-600 rounded-full animate-spin"></div>
        <p class="text-[10px] font-black text-slate-400 uppercase tracking-[0.3em] animate-pulse">Buscando pregunta...</p>
      </div>

      <div id="state-question" class="hidden grow flex flex-col animate-slide-up">
        <div class="flex justify-between items-center mb-10">
          <span id="q-difficulty" class="px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest border shadow-sm transition-all duration-300"></span>
          
          <div class="relative group">
            <button class="cursor-pointer p-2 text-slate-300 hover:text-slate-600 transition-colors" id="report-menu-btn">
              <MoreHorizontal size={20} />
            </button>
            <div id="report-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-2xl shadow-xl border border-slate-100 p-2 z-50 animate-fade-in">
              <button class="cursor-pointer w-full flex items-center space-x-3 px-4 py-3 text-left text-xs font-bold text-slate-600 hover:bg-red-50 hover:text-red-600 rounded-xl transition-all">
                <AlertTriangle size={16} />
                <span>Reportar error</span>
              </button>
            </div>
          </div>
        </div>

        <div class="grow flex items-center">
          <h2 id="q-text" class="text-[24px] font-black text-slate-800 leading-[1.3] tracking-tight text-center w-full"></h2>
        </div>

        <div class="mt-10">
          <div id="answer-reveal-btn" class="relative group p-8 rounded-[2rem] border-2 border-dashed border-slate-200 bg-slate-50/50 hover:bg-indigo-50/50 hover:border-indigo-200 transition-all duration-300 cursor-pointer overflow-hidden">
            <div id="answer-content" class="blur-xl opacity-0 transition-all duration-300 flex flex-col items-center space-y-2">
              <div class="flex items-center space-x-3 text-indigo-700">
                <CheckCircle2 size={24} />
                <p id="q-answer" class="text-2xl font-black"></p>
              </div>
              <p id="q-reference" class="text-[11px] font-bold text-indigo-400 bg-indigo-50 px-3 py-1 rounded-lg"></p>
            </div>
            <div id="reveal-hint" class="absolute inset-0 flex items-center justify-center transition-all duration-300">
               <div class="bg-white px-6 py-3 rounded-2xl shadow-lg border border-slate-100 text-xs font-black text-slate-500 uppercase tracking-tighter group-hover:scale-105 transition-transform">Ver respuesta</div>
            </div>
          </div>
        </div>
      </div>

      <div id="state-error" class="hidden grow flex flex-col items-center justify-center text-center space-y-6">
        <div class="w-20 h-20 bg-red-50 text-red-500 rounded-full flex items-center justify-center shadow-inner">
          <RotateCcw size={32} />
        </div>
        <p id="error-message" class="text-sm font-bold text-red-600"></p>
        <button id="retry-btn" class="cursor-pointer px-6 py-2 bg-slate-100 rounded-full text-[10px] font-black text-slate-500 uppercase tracking-widest hover:bg-slate-200 transition-colors">Reintentar</button>
      </div>
    </div>

    <button id="generate-btn" class="cursor-pointer group w-full py-6 rounded-[2.5rem] mt-10 bg-indigo-600 text-white font-black text-xl flex items-center justify-center space-x-4 transition-all active:scale-95 shadow-[0_20px_40px_-10px_rgba(79,70,229,0.4)] hover:bg-indigo-700 disabled:opacity-50">
      <span id="btn-text">NUEVA PREGUNTA</span>
      <ChevronRight size={24} class="group-hover:translate-x-1 transition-transform" />
    </button>
  </div>
</div>

<style>
  .no-scrollbar::-webkit-scrollbar { display: none; }
  .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideUp { from { opacity: 0; transform: translateY(25px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes bounceSoft { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-12px); } }
  .animate-fade-in { animation: fadeIn 0.4s ease-out forwards; }
  .animate-slide-up { animation: slideUp 0.5s cubic-bezier(0.23, 1, 0.32, 1) forwards; }
  .animate-bounce-soft { animation: bounceSoft 4s ease-in-out infinite; }
</style>

<script>
  // IMPORTANTE: Asegúrate de que el archivo existe en esta ruta
  import preguntasData from '../data/questions.json';

  let currentDifficulty = "Aleatorio";
  let isRequesting = false;

  const get = (id: string) => document.getElementById(id);
  const states = ['initial', 'loading', 'question', 'error'];

  window.addEventListener('DOMContentLoaded', () => {
    get('app-container')?.classList.remove('opacity-0');
  });

  get('report-menu-btn')?.addEventListener('click', (e) => {
    e.stopPropagation();
    get('report-dropdown')?.classList.toggle('hidden');
  });

  document.addEventListener('click', () => get('report-dropdown')?.classList.add('hidden'));

  async function fetchQuestion() {
    if (isRequesting) return;
    isRequesting = true;
    
    setUIState('loading');
    resetReveal();

    // Pequeño delay de 500ms para mantener la estética de la animación
    setTimeout(() => {
      try {
        let pool = preguntasData;
        
        // Filtrar por dificultad si no es aleatorio
        if (currentDifficulty !== "Aleatorio") {
          pool = preguntasData.filter(p => p.dificultad === currentDifficulty);
        }

        if (pool.length === 0) {
          throw new Error(`No hay preguntas para el nivel ${currentDifficulty}`);
        }

        // Seleccionar una al azar
        const randomIndex = Math.floor(Math.random() * pool.length);
        const data = pool[randomIndex];
        
        const realDifficulty = data.dificultad || "Medio";
        
        // ACTUALIZAMOS EL DOM
        get('q-text')!.innerText = data.pregunta;
        get('q-answer')!.innerText = data.respuesta;
        get('q-reference')!.innerText = data.referencia;
        
        const diffLabel = get('q-difficulty')!;
        diffLabel.innerText = realDifficulty;
        
        const colors: Record<string, string> = {
          'Básico': 'bg-emerald-50 text-emerald-700 border-emerald-100',
          'Medio': 'bg-blue-50 text-blue-700 border-blue-100',
          'Alto': 'bg-purple-50 text-purple-700 border-purple-100'
        };
        
        diffLabel.className = `px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest border shadow-sm transition-all duration-300 ${colors[realDifficulty] || colors['Medio']}`;

        setUIState('question');
      } catch (err) {
        get('error-message')!.innerText = err instanceof Error ? err.message : "Error al cargar los datos.";
        setUIState('error');
      } finally {
        isRequesting = false;
      }
    }, 500);
  }

  function setUIState(active: string) {
    states.forEach(s => get(`state-${s}`)?.classList.toggle('hidden', s !== active));
    const btn = get('generate-btn') as HTMLButtonElement;
    if (btn) btn.disabled = active === 'loading';
  }

  function resetReveal() {
    get('answer-content')?.classList.add('blur-xl', 'opacity-0');
    get('reveal-hint')?.classList.remove('opacity-0');
  }

  get('generate-btn')?.addEventListener('click', fetchQuestion);
  get('retry-btn')?.addEventListener('click', fetchQuestion);
  
  get('answer-reveal-btn')?.addEventListener('click', () => {
    get('answer-content')?.classList.remove('blur-xl', 'opacity-0');
    get('reveal-hint')?.classList.add('opacity-0');
  });

  document.querySelectorAll('.level-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      document.querySelectorAll('.level-btn').forEach(b => {
        b.className = "level-btn cursor-pointer grow flex items-center justify-center py-3 px-4 rounded-xl text-xs font-bold transition-all duration-300 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50";
      });
      target.className = "level-btn cursor-pointer grow flex items-center justify-center py-3 px-4 rounded-xl text-xs font-bold transition-all duration-300 bg-indigo-600 text-white shadow-lg shadow-indigo-200 scale-[1.02]";
      currentDifficulty = target.dataset.level || "Aleatorio";
    });
  });
</script>