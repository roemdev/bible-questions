---
import { BookOpen, ChevronRight, Quote } from 'lucide-astro';
import data from '../data/questions.json';

const { preguntas } = data;
---

<div class="w-full max-w-[440px] mx-auto flex flex-col min-h-[90vh] opacity-0 transition-opacity duration-1000 ease-in-out select-none" id="app-container">
  
  <header class="flex flex-col items-center mb-12 px-6 pt-10 text-center">
    <div class="mb-4 text-slate-900">
      <BookOpen size={32} strokeWidth={1.5} />
    </div>
    <h1 class="text-3xl font-serif font-medium text-slate-900 tracking-tight">BibleQuestions</h1>
    <div class="w-12 h-[1px] bg-slate-300 mt-4"></div>
    <p class="text-[10px] font-sans font-bold text-slate-400 uppercase tracking-[0.3em] mt-4">Estudio & Reflexión</p>
  </header>

  <main class="grow flex flex-col px-6">
    <div class="bg-white border border-slate-200 shadow-[0_1px_3px_rgba(0,0,0,0.05)] grow flex flex-col relative overflow-hidden" id="main-card">
      
      <div id="state-initial" class="grow flex flex-col items-center justify-center text-center p-10 space-y-8 animate-fade-in">
        <div class="text-slate-200">
            <Quote size={48} />
        </div>
        <div class="space-y-4">
          <h3 class="text-xl font-serif text-slate-800 italic">"Lámpara es a mis pies tu palabra..."</h3>
          <p class="text-sm font-sans text-slate-500 leading-relaxed max-w-[280px] mx-auto">
            Un recurso minimalista diseñado para la edificación a través de la trivia doctrinal.
          </p>
        </div>
      </div>

      <div id="state-loading" class="hidden grow flex flex-col items-center justify-center p-10 space-y-4">
        <div class="w-8 h-8 border-2 border-slate-900 border-t-transparent rounded-full animate-spin"></div>
        <p class="text-[10px] font-black text-slate-900 uppercase tracking-widest">Buscando en la Palabra</p>
      </div>

      <div id="state-question" class="hidden grow flex flex-col p-10 animate-fade-in">
        <div class="mb-10 text-center">
          <span id="q-category" class="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-400 border-b border-slate-100 pb-2"></span>
        </div>

        <div class="grow flex items-center justify-center">
          <h2 id="q-text" class="text-2xl font-serif text-slate-900 leading-snug text-center antialiased"></h2>
        </div>

        <div class="mt-12">
          <div id="answer-reveal-btn" class="relative group p-6 border border-slate-100 bg-slate-50/50 hover:bg-slate-50 transition-colors cursor-pointer text-center">
            <div id="answer-content" class="opacity-0 transition-opacity duration-500 flex flex-col items-center space-y-4">
              <p id="q-answer" class="text-lg font-serif font-bold text-slate-900"></p>
              <div id="q-reference" class="text-[10px] font-sans font-bold text-slate-500 uppercase tracking-widest border-t border-slate-200 pt-3 w-full max-w-[120px]"></div>
            </div>
            <div id="reveal-hint" class="absolute inset-0 flex items-center justify-center transition-opacity duration-300">
               <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest group-hover:text-slate-600">Revelar respuesta</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <button id="generate-btn" class="cursor-pointer w-full py-5 mt-8 bg-slate-900 text-white transition-all active:bg-slate-800 flex items-center justify-center space-x-3 group">
      <span class="text-xs font-bold uppercase tracking-[0.3em]">Nueva Pregunta</span>
      <ChevronRight size={16} class="opacity-50 group-hover:translate-x-1 transition-transform" />
    </button>
    
    <footer class="mt-10 mb-6 text-center">
      <p class="text-[9px] font-bold text-slate-300 uppercase tracking-[0.4em]">Solidez Doctrinal • 2026</p>
    </footer>
  </main>
</div>

<script define:vars={{ preguntas }}>
  let isProcessing = false;
  let lastIndex = -1;
  const states = ['initial', 'loading', 'question'];
  const get = (id) => document.getElementById(id);

  window.addEventListener('DOMContentLoaded', () => {
    get('app-container')?.classList.replace('opacity-0', 'opacity-100');
  });

  function fetchQuestionLocal() {
    if (isProcessing || !preguntas.length) return;
    
    isProcessing = true;
    setUIState('loading');
    resetReveal();

    setTimeout(() => {
      let newIndex;
      do {
        newIndex = Math.floor(Math.random() * preguntas.length);
      } while (newIndex === lastIndex && preguntas.length > 1);
      
      lastIndex = newIndex;
      const item = preguntas[newIndex];
      
      const elements = {
        'q-text': item.pregunta,
        'q-answer': item.respuesta,
        'q-reference': item.referencia,
        'q-category': item.categoria
      };

      Object.entries(elements).forEach(([id, value]) => {
        const el = get(id);
        if (el) el.innerText = value;
      });

      setUIState('question');
      isProcessing = false;
    }, 400); 
  }

  function setUIState(active) {
    states.forEach(s => get(`state-${s}`)?.classList.toggle('hidden', s !== active));
    const btn = get('generate-btn');
    if (btn) btn.disabled = (active === 'loading');
  }

  function resetReveal() {
    get('answer-content')?.classList.add('opacity-0');
    get('reveal-hint')?.classList.remove('opacity-0');
  }

  get('generate-btn')?.addEventListener('click', fetchQuestionLocal);
  get('answer-reveal-btn')?.addEventListener('click', () => {
    get('answer-content')?.classList.remove('opacity-0');
    get('reveal-hint')?.classList.add('opacity-0');
  });
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Crimson+Pro:italic,wght@0,400;0,700;1,400&family=Inter:wght@400;700;900&display=swap');
  .font-serif { font-family: 'Crimson Pro', serif; }
  .font-sans { font-family: 'Inter', sans-serif; }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  .animate-fade-in { animation: fadeIn 0.8s ease-in-out forwards; }
  body { background-color: #fcfcfc; }
  #main-card, #generate-btn { border-radius: 2px; }
</style>